{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "permissions": {
    "defaultMode": "acceptEdits",
    "deny": [
      "Read(.env)",
      "Read(~/.ssh/**)",
      "Read(~/.aws/**)"
    ],
    "ask": [
      "Bash(npm install -g *)",
      "Bash(npm install --global *)",
    ],
    "allow": [
      "WebFetch",
      "WebSearch",
      "Bash(sleep *)",
      "Bash(mkdir *)",
      "Bash(echo *)",
      "Bash(go build *)",
      "Bash(npm install *)",
      "Bash(npm run *)",
      "Bash(docker compose *)",
      "Bash(docker inspect *)",
      "Bash(docker ps *)",
      "Bash(docker network *)",
      "Bash(docker version *)",
      "Bash(docker run *)",
      "Bash(curl *)",
      "Bash(ls *)",
      "Bash(cat *)",
      "Bash(grep *)",
      "Bash(chmod *)",
      "Bash(find *)"
    ]
  }
}
